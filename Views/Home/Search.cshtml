@model List<titleBasics>
@{
    ViewData["Title"] = "Search";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <link href="~/css/CapstoneStyleSheet.css" rel="stylesheet" />
    <title>Search</title>
    <link id="littleLogo" rel="shortcut icon" href="~/Images/Logo.png" sizes="30x30" />
</head>
<body>

    <h1 class="text-center">Search</h1>
    <div>
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            @Html.Label("Search")
            @Html.TextBox("search")
            <input type="submit" id="btnSubmit" name="Submit" class="btn btn-primary" />
        }
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Genere</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@movies.primaryTitle</td>
                    <td>@movies.startYear</td>
                    <td>@movies.genres</td>
                    <td>
                        <a asp-controller="Home" asp-action="InformationTemplate" asp-route-primarytitle="@movies.primaryTitle">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>